@model GenerateApp.Controllers.InfoData

@{
    ViewData["Title"] = "Info";
    var nrRows = Model.logs.Count;
}

<h1>Info @Model.name  @(Model.InProgress()?"In progress":"Result :"+Model.result)  </h1>

<div>
    <h4>InfoData</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.pathFile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pathFile)
        </dd>
    </dl>
    <h4>Logs</h4>
    <hr />
    <dl class="row">
        @for (var i = nrRows - 1; i >= 0; i--)
        {
            <dt class="col-sm-2">
                Log @(i+1)
            </dt>
            <dd class="col-sm-10">
                @Model.logs[i]
            </dd>

        }
    </dl>
</div>
